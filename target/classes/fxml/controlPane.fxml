<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.javastart.mp3player.controller.ControlPaneController">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Button id="prev" fx:id="previousButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="45.0" HBox.hgrow="NEVER" />
                <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="45.0" HBox.hgrow="NEVER" />
                <Button id="next" fx:id="nextButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="45.0" HBox.hgrow="NEVER" />
                <Slider id="vol" fx:id="volumeSlider" HBox.hgrow="NEVER">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Slider>
                <Slider id="prog" fx:id="progressSlider" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Slider>
            </children>
        </HBox>
        <TextField fx:id="messageTextField" alignment="CENTER" editable="false" />
    </children>
</VBox>
